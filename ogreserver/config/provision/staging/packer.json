{
	"variables": {
		"atlas_name": "mafrosis/ogre-staging",
		"atlas_token": "{{env `ATLAS_TOKEN`}}",
		"aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
		"aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
		"salt_version": "v2015.5.5",
		"sesame_password": "{{env `SESAME_PASSWORD`}}",
		"source_ami": "ami-e31a6594"
	},
	"push": {
		"name": "{{user `atlas_name`}}",
		"token": "{{user `atlas_token`}}"
	},
	"builders": [{
		"type": "amazon-ebs",
		"ami_name": "ami-ogre-staging",
		"instance_type": "t2.micro",
		"region": "eu-west-1",
		"source_ami": "{{user `source_ami`}}",
		"ssh_username": "admin"
	},
	{
		"boot_command": [
			"<esc><wait>",
			"install",
			" auto",
			" url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-jessie.cfg",
			" debian-installer=en_GB",
			" locale=en_GB",
			" keymap=gb",
			" netcfg/get_hostname=vagrant",
			" netcfg/get_domain=vm ",
			"<enter>"
		],
		"disk_size": "10000",
		"guest_os_type": "debian7-64",
		"headless": "true",
		"http_directory": "http",
		"iso_checksum": "debian-8.2.0-amd64-netinst.iso",
		"iso_checksum_type": "sha1",
		"iso_urls": [
			"debian-8.2.0-amd64-netinst.iso"
		],
		"shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
		"ssh_password": "vagrant",
		"ssh_username": "vagrant",
		"ssh_wait_timeout": "10000s",
		"tools_upload_flavor": "linux",
		"type": "vmware-iso",
		"vm_name": "debian82",
		"vmx_data": {
			"memsize": "512",
			"numvcpus": "1"
		}
	}],
	"provisioners": [{
		"type": "shell",
		"inline": "echo 'vagrant' | sudo -S apt-get -y update"
	},
	{
		"type": "shell",
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
		"environment_vars": [
			"SALT_VERSION={{user `salt_version`}}",
			"SESAME_PASSWORD={{user `sesame_password`}}"
		],
		"scripts": [
			"packer-scripts/vmware.sh",
			"packer-scripts/vagrant.sh",
			"packer-scripts/saltstack.sh",
			"packer-scripts/pillar-decrypt.sh"
		]
	},
	{
		"type": "salt-masterless",
		"skip_bootstrap": true,
		"local_state_tree": "salt",
		"local_pillar_roots": "pillar",
		"minion_config": "packer-salt-minion.conf"
	}],
	"post-processors": [{
		"type": "atlas",
		"artifact": "{{user `atlas_name`}}",
		"artifact_type": "amazon.ami"
	}]
}
